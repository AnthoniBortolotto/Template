{ 
    "compilerOptions":{ 
       "target":"es6",
       "moduleResolution":"node",
       "module":"commonjs",
       "declaration":false,
       "noLib":false,
       "emitDecoratorMetadata":true,
       "experimentalDecorators":true,
       "sourceMap":true,
       "pretty":false,
      //  "allowUnreachableCode":true,
      //  "allowUnusedLabels":true,
       "noImplicitAny":true,
      //  "noImplicitReturns":false,
      //  "noImplicitUseStrict":false,
       "outDir":"dist/",
      "baseUrl":"src/",
      "paths": {"*.ts":["*"]},
      "listFiles":false,
      "noEmitHelpers":true,
      "esModuleInterop": true
    },
    "include":[ 
       "src/**/*"
    ],
    "exclude":[ 
       "node_modules"
    ],
    "compileOnSave":true
 }